{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "es2015",
    "strictNullChecks": true,
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "paths": {
      "@angular/core": ["node_modules/@angular/core"]
    },
    "removeComments": true,
    "sourceMap": true,
    "outDir": "../dist",
    "declaration": true,
    "noImplicitAny": true
  },
  "files": [
    "index.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "../temp/aot",
    "strictMetadataEmit": true
  }
}
